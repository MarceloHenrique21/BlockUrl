{
  "manifest_version": 2,
  "name": "Block site",
  "version": "3.3.1",
  "description": "Colocar senhas/bloquear sites",
  "permissions": ["activeTab", "webRequest", "webRequestBlocking", "tabs", "storage", "history", "<all_urls>", "file://*/*"],
  "background": {
    "scripts": ["Js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "Images/Timao.png",
      "48": "Images/Timao.png",
      "128": "Images/Timao.png"
    }
  },
  "icons": {
    "16": "Images/Timao.png",
    "48": "Images/Timao.png",
    "128": "Images/Timao.png"
  }, 

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Js/content.js"]
    }
  ]
}
