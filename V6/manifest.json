{
  "manifest_version": 2,
  "name": "Block site",
  "version": "6.0.0",
  "description": "Colocar senhas/bloquear sites",
  "permissions": ["webRequest", "webRequestBlocking", "tabs", "storage", "history", "<all_urls>"],
  "background": {
    "scripts": ["Js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "html/TelaInicial.html",
    "default_icon": {
      "16": "Images/Timao.png",
      "48": "Images/Timao.png",
      "128": "Images/Timao.png"
    }
  },
  "icons": {
    "16": "Images/Timao.png",
    "48": "Images/Timao.png",
    "128": "Images/Timao.png"
  }
}
